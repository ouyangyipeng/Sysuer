<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/appearance">
        <com.sysu.edu.preference.Preference
            app:entries="@array/theme"
            app:entryValues="@array/value"
            app:icon="@drawable/theme"
            app:key="theme"
            app:summary="@string/follow_system"
            app:title="@string/theme"/>
        <com.sysu.edu.preference.Preference
            app:entries="@array/theme"
            app:entryValues="@array/value"
            app:icon="@drawable/color"
            app:key="icon_theme"
            app:summary="@string/follow_system"
            app:title="@string/icon_theme"/>
        <com.sysu.edu.preference.Preference
            app:entries="@array/language"
            app:entryValues="@array/value"
            app:key="language"
            app:icon="@drawable/language"
            app:summary="@string/follow_system"
            app:title="@string/language"/>
        <com.sysu.edu.preference.Preference
            app:entries="@array/font_size"
            app:entryValues="@array/font_value"
            app:icon="@drawable/font"
            app:key="fontSize"
            app:summary="@string/follow_system"
            app:title="@string/font_size"/>
        <com.sysu.edu.preference.Preference
            app:entryValues="@array/value"
            app:entries="@array/home"
            app:key="home"
            app:icon="@drawable/home"
            app:summary="活动"
            app:title="@string/home"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/menu_activity">
        <EditTextPreference
            app:icon="@drawable/qrcode"
            app:key="qrcode"
            app:title="@string/qrcode"
            app:useSimpleSummaryProvider="true"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/app">
        <rikka.material.preference.MaterialSwitchPreference
            android:summary="应用启动时自动检测更新"
            app:defaultValue="true"
            app:icon="@drawable/refresh"
            app:key="update"
            app:title="@string/launch_update"/>
        <Preference
            app:icon="@drawable/info"
            app:title="@string/about">
            <intent android:action="android.intent.action.VIEW"
                android:targetClass="com.sysu.edu.extra.AboutActivity"
                android:targetPackage="com.sysu.edu">
            </intent>
        </Preference>
        <Preference
            app:icon="@drawable/help"
            app:title="@string/help"/>
    </PreferenceCategory>
</PreferenceScreen>