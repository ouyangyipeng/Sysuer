<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingStart="12dp"
    android:paddingTop="0dp"
    android:paddingEnd="12dp"
    android:paddingBottom="0dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/RoundRect" />
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintLeft_toLeftOf="@id/pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c" />
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:horizontalItemSpacing="0dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintLeft_toRightOf="@id/pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.chip.Chip
            android:id="@+id/location"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/location"
            app:chipIconTint="?attr/colorPrimary"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/floor"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/floor"
            app:chipIconTint="?attr/colorPrimary"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/time"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/time"
            app:chipIconTint="?attr/colorPrimary"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/seat"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/seat"
            app:chipIconTint="?attr/colorPrimary"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/type"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selfStudyRoom"
            app:icon="@drawable/book"/>
    </com.google.android.material.chip.ChipGroup>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?textAppearanceTitleLarge"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="@id/pic"
        app:layout_constraintRight_toLeftOf="@id/c"
        app:layout_constraintTop_toBottomOf="@id/pic"/>

</androidx.constraintlayout.widget.ConstraintLayout>